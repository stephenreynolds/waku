{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "member-ordering": [
          true,
          {
            "order": "fields-first"
          }
        ],
        "member-access": [
          true,
          "check-accessor"
        ],
        "no-inferrable-types": false
    }
}
